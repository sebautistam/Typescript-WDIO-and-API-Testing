{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "types": ["node", "@wdio/globals/types", "@wdio/cucumber-framework"],

    "strict": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,

    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"]
}