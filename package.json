{
  "name": "wdio-with-reporters-and-quality-gates",
  "version": "1.0.0",
  "description": "Testing automation exercise with POM",
  "license": "ISC",
  "author": "sebautistam",
  "type": "commonjs",
  "main": "index.js",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "@wdio/allure-reporter": "^9.22.0",
    "@wdio/cli": "^9.22.0",
    "@wdio/cucumber-framework": "^9.22.0",
    "@wdio/local-runner": "^9.22.0",
    "@wdio/spec-reporter": "^9.20.0",
    "allure-commandline": "^2.36.0",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "pretty-quick": "^4.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "test": "wdio run ./src/config/wdio.conf.js",
    "wdio": "wdio run ./src/config/wdio.conf.js",
    "test:registration": "npx wdio ./src/config/wdio.conf.js --cucumberOpts.tagExpression='@registration'",
    "test:login": "npx wdio ./src/config/wdio.conf.js --cucumberOpts.tagExpression='@login'",
    "test:profile": "npx wdio ./src/config/wdio.conf.js --cucumberOpts.tagExpression='@profile'",
    "report": "allure generate allure-results --clean && allure open allure-report",
    "wdio-lint": "eslint .",
    "wdio-format-check": "pretty-quick"
  }
}
